<?xml version="1.0"?>
<bindings id="textboxBindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <binding id="facebook-search-hbox">
    <content>
      <xul:image />
      <children />
    </content>
  </binding>
  <binding id="friendBox" extends="chrome://global/content/bindings/richlistbox.xml#richlistitem">
    <content>
      <xul:vbox>
        <xul:image xbl:inherits="src=pic,onclick=oncommand" class="facebook-link" />
      </xul:vbox>
      <xul:vbox>
        <xul:label xbl:inherits="value=friendname,onclick=oncommand" class="facebook-link user_name" />
        <xul:label xbl:inherits="value=status" class="status" />
        <xul:hbox class="facebook-friendlinks">
          <xul:toolbarbutton xbl:inherits="oncommand=msgCmd"
                             class="facebook-icon-msgs facebook-link"
                             onclick="checkForMiddleClick(this, event);" />
          <xul:toolbarbutton xbl:inherits="oncommand=pokeCmd"
                             class="facebook-icon-poke facebook-link"
                             onclick="checkForMiddleClick(this, event);" />
        </xul:hbox>
      </xul:vbox>
    </content>
  </binding>
  <binding id="popupMessager" extends="chrome://global/content/bindings/richlistbox.xml#richlistitem">
    <content>
      <xul:toolbarbutton class="facebook-icon-msgs facebook-link" />
      <xul:label xbl:inherits="value" class="facebook-link" />
    </content>
  </binding>
  <binding id="popupPoker" extends="chrome://global/content/bindings/richlistbox.xml#richlistitem">
    <content>
      <xul:toolbarbutton class="facebook-icon-poke facebook-link" />
      <xul:label xbl:inherits="value" class="facebook-link" />
    </content>
  </binding>
</bindings>
